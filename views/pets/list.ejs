<%- include('../partials/header', { title: title }) %>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Virtual Pets üêæ</h1>
        <a href="/pets/create" class="btn btn-primary">‚ûï Adopt New Pet</a>
    </div>
    <!-- Safe error check -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof pets === 'undefined' || pets.length === 0) { %>
        <div class="text-center py-5">
            <div class="empty-state">
                <h3>üêæ No pets yet!</h3>
                <p class="text-muted mb-4">Adopt your first virtual pet to start the adventure</p>
                <a href="/pets/create" class="btn btn-primary btn-lg me-3">Adopt First Pet</a>
                <a href="/" class="btn btn-outline-secondary">Back to Home</a>
               
                <div class="mt-5">
                    <h5>üéØ How to get started?</h5>
                    <div class="row mt-3 justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-body text-start">
                                    <ol>
                                        <li class="mb-2">Click "Adopt New Pet" button</li>
                                        <li class="mb-2">Give your pet a cute name</li>
                                        <li class="mb-2">Choose species and traits</li>
                                        <li class="mb-2">Set rarity level</li>
                                        <li>Start caring for your virtual companion!</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row">
            <% pets.forEach(pet => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <!-- Êñ∞Â¢ûÔºöÊòæÁ§∫ÂõæÁâáÔºàÂü∫‰∫é pet.imageÔºâÔºåfallback Âà∞ emoji -->
                            <% if (pet.image) { %>
                                <img src="/images/<%= pet.image %>" alt="<%= pet.species %> icon" class="pet-icon"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                                <span class="pet-emoji-fallback" style="display: none;">
                                    <%
                                        const speciesEmoji = {
                                            'dragon': 'üêâ',
                                            'cat': 'üê±',
                                            'dog': 'üê∂',
                                            'rat': 'üêÄ',
                                            'elf': 'üßù',
                                            'robot': 'ü§ñ',
                                            'wolf': 'üê∫',
                                            'deer': 'ü¶å',
                                            'duck': 'ü¶Ü',
                                            'bear': 'üêª'
                                        };
                                    %>
                                    <%= speciesEmoji[pet.species] || 'üêæ' %>
                                </span>
                            <% } else { %>
                                <%
                                    const speciesEmoji = {
                                        'dragon': 'üêâ',
                                        'cat': 'üê±',
                                        'dog': 'üê∂',
                                        'rat': 'üêÄ',
                                        'elf': 'üßù',
                                        'robot': 'ü§ñ',
                                        'wolf': 'üê∫',
                                        'deer': 'ü¶å',
                                        'duck': 'ü¶Ü',
                                        'bear': 'üêª'
                                    };
                                %>
                                <%= speciesEmoji[pet.species] || 'üêæ' %>
                            <% } %>
                            <%= pet.name %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <span class="badge bg-<%=
                                pet.rarity === 'Legendary' ? 'danger' :
                                pet.rarity === 'Epic' ? 'warning' :
                                pet.rarity === 'Rare' ? 'info' : 'secondary'
                            %>"><%= pet.rarity %></span>
                            <%= pet.species.charAt(0).toUpperCase() + pet.species.slice(1) %>
                        </h6>
                       
                        <div class="mb-3">
                            <% if (pet.traits && pet.traits.length > 0) { %>
                                <% pet.traits.forEach(trait => { %>
                                    <span class="badge bg-light text-dark me-1 mb-1"><%= trait %></span>
                                <% }) %>
                            <% } %>
                        </div>
                        <!-- Status bars -->
                        <div class="mb-2">
                            <small>Hunger: <%= pet.stats.hunger %>/100</small>
                            <div class="progress mb-1">
                                <div class="progress-bar bg-<%= pet.stats.hunger > 50 ? 'success' : 'warning' %>"
                                     style="width: <%= pet.stats.hunger %>%"></div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <small>Happiness: <%= pet.stats.happiness %>/100</small>
                            <div class="progress mb-1">
                                <div class="progress-bar bg-<%= pet.stats.happiness > 50 ? 'success' : 'warning' %>"
                                     style="width: <%= pet.stats.happiness %>%"></div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <small>Energy: <%= pet.stats.energy %>/100</small>
                            <div class="progress mb-1">
                                <div class="progress-bar bg-<%= pet.stats.energy > 50 ? 'success' : 'warning' %>"
                                     style="width: <%= pet.stats.energy %>%"></div>
                            </div>
                        </div>
                        <% if (pet.needsCare && pet.needsCare()) { %>
                            <div class="alert alert-warning py-2">
                                <small>‚ö†Ô∏è Needs care!</small>
                            </div>
                        <% } %>
                    </div>
                    <div class="card-footer">
                        <a href="/pets/<%= pet._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
                        <form action="/pets/<%= pet._id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to release <%= pet.name %>?')">
                                Release
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>
<%- include('../partials/footer', { dbStatus: typeof dbStatus !== 'undefined' ? dbStatus : 'Connected' }) %>
