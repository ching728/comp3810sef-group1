<%- include('../partials/header', { title: title }) %>
<%
    // ÂÆö‰πâ emoji ÂØπË±°ÔºåÈÅøÂÖçÈáçÂ§ç
    const speciesEmoji = {
        'dragon': 'üêâ',
        'cat': 'üê±',
        'dog': 'üê∂',
        'rat': 'üêÄ',
        'elf': 'üßù',
        'robot': 'ü§ñ',
        'wolf': 'üê∫',
        'deer': 'ü¶å',
        'duck': 'ü¶Ü',
        'bear': 'üêª'
    };
%>
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/pets">My Pets</a></li>
                    <li class="breadcrumb-item active"><%= pet.name %></li>
                </ol>
            </nav>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <!-- Êñ∞Â¢ûÔºöÂõæÁâá + fallback emoji + ÂÆ†Áâ©Âêç + rarity badge -->
                        <% if (pet.image) { %>
                            <img src="/images/<%= pet.image %>" alt="<%= pet.species %> icon" class="pet-detail-icon me-1"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                            <span class="pet-emoji-fallback" style="display: none;">
                                <%= speciesEmoji[pet.species] || 'üêæ' %>
                            </span>
                        <% } else { %>
                            <%= speciesEmoji[pet.species] || 'üêæ' %>
                        <% } %>
                        <%= pet.name %>
                        <span class="badge bg-<%=
                            pet.rarity === 'Legendary' ? 'danger' :
                            pet.rarity === 'Epic' ? 'warning' :
                            pet.rarity === 'Rare' ? 'info' : 'secondary'
                        %> float-end"><%= pet.rarity %></span>
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Basic Information</h5>
                            <p><strong>Species:</strong> <%= pet.species.charAt(0).toUpperCase() + pet.species.slice(1) %></p>
                            <p><strong>Birth Date:</strong> <%= pet.birthDate.toLocaleDateString() %></p>
                           
                            <% if (pet.traits && pet.traits.length > 0) { %>
                                <p><strong>Traits:</strong><br>
                                <% pet.traits.forEach(trait => { %>
                                    <span class="badge bg-primary me-1 mb-1"><%= trait %></span>
                                <% }) %>
                                </p>
                            <% } %>
                        </div>
                       
                        <div class="col-md-6">
                            <h5>Status</h5>
                           
                            <div class="mb-3">
                                <label>Hunger: <%= pet.stats.hunger %>/100</label>
                                <div class="progress">
                                    <div class="progress-bar bg-<%= pet.stats.hunger > 50 ? 'success' : 'warning' %>"
                                         style="width: <%= pet.stats.hunger %>%"></div>
                                </div>
                            </div>
                           
                            <div class="mb-3">
                                <label>Happiness: <%= pet.stats.happiness %>/100</label>
                                <div class="progress">
                                    <div class="progress-bar bg-<%= pet.stats.happiness > 50 ? 'success' : 'warning' %>"
                                         style="width: <%= pet.stats.happiness %>%"></div>
                                </div>
                            </div>
                           
                            <div class="mb-3">
                                <label>Energy: <%= pet.stats.energy %>/100</label>
                                <div class="progress">
                                    <div class="progress-bar bg-<%= pet.stats.energy > 50 ? 'success' : 'warning' %>"
                                         style="width: <%= pet.stats.energy %>%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Care buttons - Êñ∞Â¢û onClick Èü≥Êïà -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Care for Your Pet</h5>
                            <div class="d-grid gap-2 d-md-flex">
                                <form method="POST" action="/pets/<%= pet._id %>/care" class="me-2" onsubmit="playSound('feed'); return true;">
                                    <input type="hidden" name="action" value="feed">
                                    <button type="submit" class="btn btn-success">üçñ Feed</button>
                                </form>
                                <form method="POST" action="/pets/<%= pet._id %>/care" class="me-2" onsubmit="playSound('play'); return true;">
                                    <input type="hidden" name="action" value="play">
                                    <button type="submit" class="btn btn-info">üéæ Play</button>
                                </form>
                                <form method="POST" action="/pets/<%= pet._id %>/care" onsubmit="playSound('rest'); return true;">
                                    <input type="hidden" name="action" value="rest">
                                    <button type="submit" class="btn btn-warning">üò¥ Rest</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% if (pet.needsCare && pet.needsCare()) { %>
                        <div class="alert alert-warning mt-3">
                            <strong>‚ö†Ô∏è Attention!</strong> Your pet needs care! Please feed, play, or let it rest.
                        </div>
                    <% } %>
                </div>
                <div class="card-footer">
                    <form action="/pets/<%= pet._id %>/delete" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to release <%= pet.name %>? This action cannot be undone!')">
                            üö™ Release Pet
                        </button>
                    </form>
                    <a href="/pets" class="btn btn-outline-secondary float-end">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Êñ∞Â¢ûÔºöÈü≥Êïà JS ÂáΩÊï∞ÔºàÂåπÈÖç‰Ω†ÁöÑ sounds/ Êñá‰ª∂Â§πÂíå .mp3 Ê†ºÂºèÔºâ -->
<script>
function playSound(action) {
  console.log('Trying to play sound for:', action);  // Ë∞ÉËØïÔºöConsole ÁúãÊòØÂê¶Ëß¶Âèë
  const soundPath = `/sounds/${action}.mp3`;  // ÂåπÈÖç‰Ω†ÁöÑË∑ØÂæÑÔºö/sounds/feed.mp3 Á≠â
  console.log('Sound path:', soundPath);  // Ë∞ÉËØïË∑ØÂæÑ
  const sound = new Audio(soundPath);
  sound.preload = 'auto';  // È¢ÑËΩΩ
  sound.volume = 0.5;
  sound.play().then(() => {
    console.log('Sound played successfully!');  // ÊàêÂäüÊó•Âøó
  }).catch(err => {
    console.error('Sound play failed:', err);  // ËØ¶ÁªÜÈîôËØØ
  });
}
</script>

